            </rowConstraints>
            <children>
                <AnchorPane prefHeight="546.0" prefWidth="303.0">
                    <children>
                        <Text fill="#362929" layoutX="120.0" layoutY="21.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Крипта:" textAlignment="CENTER">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Text>
                        <TextField fx:id="currencyOne" layoutX="30.0" layoutY="34.0" prefHeight="39.0" prefWidth="121.0" promptText="Выбирите крипту:" />
                        <TextField fx:id="currencyTwo" layoutX="152.0" layoutY="34.0" prefHeight="39.0" prefWidth="99.0" promptText="Выбирите пару:" />
                        <Button fx:id="buttonOk" layoutX="251.0" layoutY="34.0" mnemonicParsing="false" onAction="#initialize" prefHeight="39.0" prefWidth="52.0" text="оК">
